<Window x:Class="WpfApp1.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="WpfApp1 Register" Height="670" Width="520"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Background="#F0F2F5">

    <Grid>
        <Border Width="380"
                Padding="24"
                Background="White"
                CornerRadius="12"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Border.Effect>
                <DropShadowEffect ShadowDepth="1"
                                  BlurRadius="10"
                                  Color="#DDDDDD"
                                  Opacity="0.5" />
            </Border.Effect>

            <StackPanel>

                <TextBlock Text="BUAT AKUN BARU"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#333333"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25" />

                <TextBlock Text="Nama"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="#555555"
                           Margin="0,0,0,12" />
                <TextBox x:Name="NameTextBox"
                         FontSize="20"
                         Padding="10,8"
                         BorderThickness="1"
                         BorderBrush="#CCCCCC"
                         Margin="0,0,0,20" />

                <TextBlock Text="Email"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="#555555"
                           Margin="0,0,0,12" />
                <TextBox x:Name="EmailTextBox"
                         FontSize="20"
                         Padding="10,8"
                         BorderThickness="1"
                         BorderBrush="#CCCCCC"
                         Margin="0,0,0,20" />

                <TextBlock Text="Password"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="#555555"
                           Margin="0,0,0,12" />
                <PasswordBox x:Name="PasswordBox"
                             FontSize="20"
                             Padding="10,8"
                             BorderThickness="1"
                             BorderBrush="#CCCCCC"
                             Margin="0,0,0,20" />

                <TextBlock Text="Konfirmasi Password"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="#555555"
                           Margin="0,0,0,12" />
                <PasswordBox x:Name="ConfirmPasswordBox"
                             FontSize="20"
                             Padding="10,8"
                             BorderThickness="1"
                             BorderBrush="#CCCCCC"
                             Margin="0,0,0,25" />

                <Button x:Name="RegisterButton"
                        Content="Register"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        Background="#007ACC"
                        BorderThickness="0"
                        Padding="10"
                        Cursor="Hand"
                        Margin="0,12,0,0"
                        Click="RegisterButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <TextBlock FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,4">
                    <Run Text="Sudah punya akun? "/>
                    <Hyperlink Foreground="#007ACC"
                               Cursor="Hand"
                               Click="LoginHyperlink_Click">
                        Login
                    </Hyperlink>
                </TextBlock>

            </StackPanel>
        </Border>
    </Grid>
</Window>