<Window x:Class="WpfApp1.BookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="BookingWindow" Height="450" Width="800" Background="#f5f5f5">
    <Grid Margin="10">
        <TextBlock Text="Daftar Kapal yang Dipesan"
                   FontSize="20" FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <ListView x:Name="BookingList" Margin="0,40,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}" Width="50"/>
                    <GridViewColumn Header="Nama Kapal" DisplayMemberBinding="{Binding Model}" Width="150"/>
                    <GridViewColumn Header="Harga" DisplayMemberBinding="{Binding Price}" Width="150"/>
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
