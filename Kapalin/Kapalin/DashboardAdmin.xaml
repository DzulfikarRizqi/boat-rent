<Window x:Class="CobaHW7.DashboardAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:CobaHW7.ViewModels"
        mc:Ignorable="d"
        Title="Kapal - Dashboard Admin"
        Height="780" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FB">

    <!-- ============ THEME / STYLES (tanpa System:String) ============ -->
    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#1976D2"/>
        <SolidColorBrush x:Key="PrimaryBrushHover" Color="#1E88E5"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#E53935"/>
        <SolidColorBrush x:Key="DangerBrushHover" Color="#F4511E"/>
        <SolidColorBrush x:Key="CardBorder" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="HeaderGray" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="TextDark" Color="#0F172A"/>

        <!-- Buttons -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryBrushHover}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="Background" Value="#E9EEF5"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DFE8F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DangerBrushHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox toolbar -->
        <Style x:Key="ToolbarTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
        </Style>

        <!-- Card -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid modern -->
        <Style x:Key="ModernGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E6E6E6"/>
            <Setter Property="VerticalGridLinesBrush" Value="#E6E6E6"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="ColumnHeaderHeight" Value="32"/>
            <Setter Property="RowHeight" Value="34"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource HeaderGray}"/>
                        <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="Padding" Value="8,0,8,0"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E6F2FF"/>
                                <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- ============ VIEWMODEL ============ -->
    <Window.DataContext>
        <vm:DashboardAdminViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header bar -->
        <Border Background="#1976D2" Height="56" Grid.Row="0">
            <DockPanel LastChildFill="False" Margin="16,0">
                <TextBlock Text="Dashboard — KAPALIN  •  Admin"
                           Foreground="White" FontSize="20" FontWeight="Bold"
                           VerticalAlignment="Center" DockPanel.Dock="Left"/>
            </DockPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="16">
            <TabControl Background="Transparent" BorderBrush="{x:Null}" Foreground="{StaticResource TextDark}">
                <!-- ===================== TAB KAPAL ===================== -->
                <TabItem Header="Kapal">
                    <Border Style="{StaticResource Card}" Padding="16" Margin="0,12,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Toolbar -->
                            <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,12">
                                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                    <Button Content="Tambah Kapal" Style="{StaticResource PrimaryButton}" Click="AddBoat_Click"/>
                                    <Button Content="Hapus Kapal"   Style="{StaticResource SecondaryButton}" Click="DeleteBoat_Click"/>
                                    <Button Content="Simpan Perubahan" Style="{StaticResource SecondaryButton}" Margin="0" Click="SaveBoats_Click"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                                    <TextBlock Text="Cari:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBox Width="240" Style="{StaticResource ToolbarTextBox}"
                                             Text="{Binding BoatFilter, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                            </DockPanel>

                            <!-- Grid Kapal -->
                            <Border CornerRadius="10" BorderBrush="{StaticResource CardBorder}" BorderThickness="1" Grid.Row="1">
                                <DataGrid ItemsSource="{Binding BoatsView}"
                                          Style="{StaticResource ModernGrid}"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          IsReadOnly="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID" Binding="{Binding ID}" IsReadOnly="True" Width="60" />
                                        <DataGridTextColumn Header="Nama" Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                                        <DataGridTextColumn Header="Model" Binding="{Binding Model, UpdateSourceTrigger=PropertyChanged}" Width="140" />
                                        <DataGridTextColumn Header="Lokasi" Binding="{Binding Location, UpdateSourceTrigger=PropertyChanged}" Width="120" />
                                        <DataGridTextColumn Header="Kapasitas" Binding="{Binding Capacity, UpdateSourceTrigger=PropertyChanged}" Width="90" />
                                        <DataGridTextColumn Header="Tahun" Binding="{Binding Year, UpdateSourceTrigger=PropertyChanged}" Width="80" />
                                        <DataGridTextColumn Header="Rating" Binding="{Binding Rating, UpdateSourceTrigger=PropertyChanged, StringFormat=F1}" Width="80" />
                                        <DataGridTextColumn Header="Harga/Hari" Binding="{Binding PricePerDay, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}" Width="120" />
                                        <DataGridCheckBoxColumn Header="Aktif" Binding="{Binding Available}" Width="70" />
                                        <DataGridTextColumn Header="ThumbnailPath" Binding="{Binding ThumbnailPath, UpdateSourceTrigger=PropertyChanged}" Width="200" />
                                        <DataGridTemplateColumn Header="Aksi" Width="110">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="Hapus" Style="{StaticResource DangerButton}"
                                                                Padding="8,4" Margin="0" Tag="{Binding}" Click="DeleteBoatRow_Click"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Border>
                        </Grid>
                    </Border>
                </TabItem>

                <!-- ===================== TAB BOOKING ===================== -->
                <TabItem Header="Booking">
                    <Border Style="{StaticResource Card}" Padding="16" Margin="0,12,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <DockPanel Grid.Row="0" Margin="0,0,0,12">
                                <TextBlock Text="Kelola booking (Konfirmasi / Batalkan)"
                                           FontWeight="SemiBold" Foreground="{StaticResource TextDark}"/>
                            </DockPanel>

                            <Border CornerRadius="10" BorderBrush="{StaticResource CardBorder}" BorderThickness="1" Grid.Row="1">
                                <DataGrid ItemsSource="{Binding Bookings}"
                                          Style="{StaticResource ModernGrid}"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="BookingId" Binding="{Binding BookingId}" Width="90" />
                                        <DataGridTextColumn Header="BoatId"    Binding="{Binding BoatId}" Width="70" />
                                        <DataGridTextColumn Header="UserId"    Binding="{Binding UserId}" Width="70" />
                                        <DataGridTextColumn Header="Mulai"     Binding="{Binding StartDate, StringFormat=\{0:yyyy-MM-dd\}}" Width="110" />
                                        <DataGridTextColumn Header="Selesai"   Binding="{Binding EndDate, StringFormat=\{0:yyyy-MM-dd\}}" Width="110" />
                                        <DataGridTextColumn Header="Total (IDR)" Binding="{Binding TotalAmount, StringFormat=N0}" Width="110" />
                                        <DataGridTextColumn Header="Metode"    Binding="{Binding PaymentMethod}" Width="100" />
                                        <!-- Status dengan chip warna (tanpa converter) -->
                                        <DataGridTemplateColumn Header="Status" Width="120">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border CornerRadius="10" Padding="8,2" BorderThickness="1">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="#E2E8F0"/>
                                                                <Setter Property="BorderBrush" Value="#E2E8F0"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Confirmed">
                                                                        <Setter Property="Background" Value="#E6F7EE"/>
                                                                        <Setter Property="BorderBrush" Value="#A5D6A7"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                                        <Setter Property="Background" Value="#FFF8E1"/>
                                                                        <Setter Property="BorderBrush" Value="#FFE082"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                                        <Setter Property="Background" Value="#FFEBEE"/>
                                                                        <Setter Property="BorderBrush" Value="#EF9A9A"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock Text="{Binding Status}" FontWeight="SemiBold"
                                                                   Foreground="{StaticResource TextDark}" />
                                                    </Border>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>

                                        <DataGridTemplateColumn Header="Aksi" Width="200">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="Konfirmasi" Style="{StaticResource PrimaryButton}"
                                                                Padding="8,4" Margin="0,0,8,0" Tag="{Binding}" Click="ConfirmBooking_Click"/>
                                                        <Button Content="Batalkan"   Style="{StaticResource DangerButton}"
                                                                Padding="8,4" Tag="{Binding}" Click="CancelBooking_Click"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Border>
                        </Grid>
                    </Border>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
