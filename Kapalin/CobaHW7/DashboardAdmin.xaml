<Window x:Class="CobaHW7.DashboardAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:CobaHW7.ViewModels"
        mc:Ignorable="d"
        Title="Kapal - Dashboard Admin"
        Height="1080" Width="1920"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Background="#F5F7FB">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#1976D2"/>
        <SolidColorBrush x:Key="PrimaryBrushHover" Color="#1E88E5"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#E53935"/>
        <SolidColorBrush x:Key="DangerBrushHover" Color="#F4511E"/>
        <SolidColorBrush x:Key="CardBorder" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="HeaderGray" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="TextDark" Color="#0F172A"/>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryBrushHover}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="Background" Value="#E9EEF5"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DFE8F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DangerBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource DangerBrushHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ToolbarTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
        </Style>

        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E6E6E6"/>
            <Setter Property="VerticalGridLinesBrush" Value="#E6E6E6"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="ColumnHeaderHeight" Value="32"/>
            <Setter Property="RowHeight" Value="200"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource HeaderGray}"/>
                        <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="Padding" Value="8,0,8,0"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E6F2FF"/>
                                <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BookingGrid" TargetType="DataGrid" BasedOn="{StaticResource ModernGrid}">
            <Setter Property="RowHeight" Value="50"/>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <vm:DashboardAdminViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#1976D2" Height="56" Grid.Row="0">
            <DockPanel LastChildFill="False" Margin="16,0">
                <TextBlock Text="Dashboard — KAPALIN  •  Admin"
                           Foreground="White" FontSize="20" FontWeight="Bold"
                           VerticalAlignment="Center" DockPanel.Dock="Left"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button x:Name="BtnLogout" Content="Logout" Padding="15,8" Background="#D32F2F" Foreground="White" FontWeight="SemiBold" BorderThickness="0" Click="BtnLogout_Click" Height="42" Width="89" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Grid.Row="1" Margin="16">
            <TabControl Background="Transparent" BorderBrush="{x:Null}" Foreground="{StaticResource TextDark}">
                <TabItem Header="Kapal">
                    <Border Style="{StaticResource Card}" Padding="16" Margin="0,12,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,12">
                                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                                    <Button Content="+ Tambah Kapal"
                                            Style="{StaticResource PrimaryButton}"
                                            Command="{Binding AddBoatCommand}"
                                            Height="38"
                                            Padding="18,8"
                                            FontSize="13"
                                            FontWeight="SemiBold"
                                            Margin="0,0,10,0"
                                            Cursor="Hand">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </DockPanel>

                            <Border CornerRadius="10" BorderBrush="{StaticResource CardBorder}" BorderThickness="1" Grid.Row="1">
                                <DataGrid x:Name="BoatsDataGrid"
                                          ItemsSource="{Binding BoatsView}"
                                          Style="{StaticResource ModernGrid}"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID" Binding="{Binding ID}" IsReadOnly="True" Width="60" />
                                        <DataGridTextColumn Header="Nama" Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="150" />
                                        <DataGridTextColumn Header="Model" Binding="{Binding Model, UpdateSourceTrigger=PropertyChanged}" Width="140" />
                                        <DataGridTextColumn Header="Lokasi" Binding="{Binding Location, UpdateSourceTrigger=PropertyChanged}" Width="150" />
                                        <DataGridTextColumn Header="Kapasitas" Binding="{Binding Capacity, UpdateSourceTrigger=PropertyChanged}" Width="90" />
                                        <DataGridTextColumn Header="Tahun" Binding="{Binding Year, UpdateSourceTrigger=PropertyChanged}" Width="120" />
                                        <DataGridTextColumn Header="Rating" Binding="{Binding Rating, UpdateSourceTrigger=PropertyChanged, StringFormat=F1}" Width="120" />
                                        <DataGridTextColumn Header="Harga/Hari" Binding="{Binding PricePerDay, UpdateSourceTrigger=PropertyChanged, StringFormat='Rp {0:N0}'}" Width="120" />
                                        <DataGridCheckBoxColumn Header="Aktif" Binding="{Binding Available}" Width="70" />

                                        <DataGridTemplateColumn Header="Gambar" Width="*">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                                            Command="{Binding DataContext.ShowImageCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                            CommandParameter="{Binding ThumbnailPath}"
                                                            ToolTip="Klik untuk memperbesar gambar"
                                                            Cursor="Hand"
                                                            Height="180" Width="400">
                                                        <Border Background="#F0F0F0" CornerRadius="4">
                                                            <Image Source="{Binding ThumbnailPath, TargetNullValue={x:Null}, FallbackValue={x:Null}}" 
                                                                   Stretch="UniformToFill" 
                                                                   ClipToBounds="True" />
                                                        </Border>
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>

                                        <DataGridTemplateColumn Header="Aksi" Width="250">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center">

                                                        <Button Content="✎ Edit"
                                                                Height="36"
                                                                Padding="12,8"
                                                                FontSize="12"
                                                                FontWeight="SemiBold"
                                                                Margin="0,0,8,0"
                                                                Style="{StaticResource SecondaryButton}"
                                                                Command="{Binding DataContext.EditBoatCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                                CommandParameter="{Binding}">
                                                            <Button.Template>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#D5E3F5"/>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>

                                                        <Button Content="🗑 Hapus"
                                                                Height="36"
                                                                Padding="12,8"
                                                                FontSize="12"
                                                                FontWeight="SemiBold"
                                                                Style="{StaticResource DangerButton}"
                                                                Command="{Binding DataContext.DeleteBoatCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                                CommandParameter="{Binding}">
                                                            <Button.Template>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="#F4511E"/>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>

                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Border>
                        </Grid>
                    </Border>
                </TabItem>

                <TabItem Header="Booking">
                    <Border Style="{StaticResource Card}" Padding="16" Margin="0,12,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,12">
                                <TextBlock Text="Kelola Pemesanan" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource TextDark}" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                            </DockPanel>

                            <Border CornerRadius="10" BorderBrush="{StaticResource CardBorder}" BorderThickness="1" Grid.Row="1">
                                <DataGrid ItemsSource="{Binding Bookings}"
                                          Style="{StaticResource BookingGrid}"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID Pesanan" Binding="{Binding BookingId}" Width="100" />
                                        <DataGridTextColumn Header="ID Kapal" Binding="{Binding BoatId}" Width="80" />
                                        <DataGridTextColumn Header="Tanggal Mulai" Binding="{Binding StartDate, StringFormat=\{0:dd MMM yyyy\}}" Width="140" />
                                        <DataGridTextColumn Header="Tanggal Selesai" Binding="{Binding EndDate, StringFormat=\{0:dd MMM yyyy\}}" Width="140" />
                                        <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount, StringFormat='Rp {0:N0}'}" Width="140" />
                                        <DataGridTextColumn Header="Metode Pembayaran" Binding="{Binding PaymentMethod}" Width="160" />

                                        <DataGridTemplateColumn Header="Status" Width="160">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border CornerRadius="6" Padding="8,4" BorderThickness="1" HorizontalAlignment="Center">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="#E2E8F0"/>
                                                                <Setter Property="BorderBrush" Value="#94A3B8"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Confirmed">
                                                                        <Setter Property="Background" Value="#DCFCE7"/>
                                                                        <Setter Property="BorderBrush" Value="#86EFAC"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Menunggu Pembayaran">
                                                                        <Setter Property="Background" Value="#FEF3C7"/>
                                                                        <Setter Property="BorderBrush" Value="#FCD34D"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                                        <Setter Property="Background" Value="#FEE2E2"/>
                                                                        <Setter Property="BorderBrush" Value="#FECACA"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <TextBlock Text="{Binding Status}" FontWeight="SemiBold" Foreground="{StaticResource TextDark}" FontSize="12" />
                                                    </Border>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>

                                        <DataGridTemplateColumn Header="Aksi" Width="240">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                        <Button Content="✓ Konfirmasi"
                                                                Style="{StaticResource PrimaryButton}"
                                                                Width="110"
                                                                Height="40"
                                                                Padding="8,6"
                                                                Margin="0,0,8,0"
                                                                FontSize="12"
                                                                Command="{Binding DataContext.ConfirmBookingCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                                CommandParameter="{Binding}"/>
                                                        <Button Content="✕ Batalkan"
                                                                Style="{StaticResource DangerButton}"
                                                                Width="100"
                                                                Height="40"
                                                                Padding="8,6"
                                                                FontSize="12"
                                                                Command="{Binding DataContext.CancelBookingCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                                CommandParameter="{Binding}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Border>
                        </Grid>
                    </Border>
                </TabItem>
            </TabControl>
        </Grid>

        <Grid x:Name="ImageViewer" 
              Grid.Row="0" Grid.RowSpan="2" 
              Visibility="Collapsed"
              Panel.ZIndex="999">

            <Border Background="#AA000000">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftClick" 
                                  Command="{Binding HideImageCommand}" />
                </Border.InputBindings>
            </Border>

            <Border Background="White" 
                    CornerRadius="8"
                    Padding="10"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    MaxWidth="1000" MaxHeight="700">

                <Grid>
                    <Image Source="{Binding LargeImageUrl, TargetNullValue={x:Null}, FallbackValue={x:Null}}" 
                           Stretch="Uniform" />

                    <Button Content="X"
                            Command="{Binding HideImageCommand}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="-25,-25,-25,0"
                            Style="{StaticResource DangerButton}"
                            Width="40" Height="40"
                            FontSize="16" FontWeight="Bold" 
                            ToolTip="Tutup" />
                </Grid>
            </Border>

            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Visible" />

                    <Style.Triggers>
                        <DataTrigger Binding="{Binding LargeImageUrl}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

        </Grid>

    </Grid>
</Window>
