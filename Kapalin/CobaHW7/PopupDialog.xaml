<Window x:Class="CobaHW7.PopupDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        Background="Transparent" AllowsTransparency="True"
        ShowInTaskbar="False" Topmost="True">
    <Grid Margin="0" Background="Transparent">
        <Border CornerRadius="16" Padding="20" Background="White" >
            <Border.Effect>
                <DropShadowEffect Color="#55000000" BlurRadius="20" ShadowDepth="0"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header gradient -->
                <Border Grid.Row="0" CornerRadius="12" Height="6" x:Name="AccentBar"
                        Background="#2979FF"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,16,0,0">
                    <!-- Icon -->
                    <TextBlock x:Name="IconBlock" FontFamily="Segoe MDL2 Assets" FontSize="28"
                               VerticalAlignment="Center" Margin="0,0,12,0" Text="&#xE946;"/>
                    <StackPanel>
                        <TextBlock x:Name="TitleBlock" FontWeight="Bold" FontSize="18"
                                   Text="Judul"/>
                        <TextBlock x:Name="MessageBlock" TextWrapping="Wrap" Margin="0,6,0,0"
                                   Width="340" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                    <Button Width="96" Height="32" Content="OK" Click="Ok_Click"
                            Background="#2979FF" Foreground="White" FontWeight="SemiBold"
                            BorderBrush="{x:Null}" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
