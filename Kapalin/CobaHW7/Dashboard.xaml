<Window x:Class="CobaHW7.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:vm="clr-namespace:CobaHW7.ViewModels"
        mc:Ignorable="d"
        Title="Dashboard" 
        Height="1080" Width="1920"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FB">

    <Window.DataContext>
        <vm:DashboardUserViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1976D2" Padding="20,15">
            <DockPanel LastChildFill="False">
                <TextBlock Text="Dashboard — KAPALIN" 
                           Foreground="White" FontWeight="Bold" FontSize="20" 
                           VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button Content="Cek Booking" Padding="15,8" Background="White" Foreground="#1976D2" FontWeight="SemiBold" BorderThickness="0" Margin="0,0,10,0"/>
                    <Button x:Name="BtnLogout" Content="Logout" Padding="15,8" Background="#D32F2F" Foreground="White" FontWeight="SemiBold" BorderThickness="0" Click="BtnLogout_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <ItemsControl ItemsSource="{Binding Boats}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" Width="280" Margin="0,0,20,20" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Color="Black"/>
                            </Border.Effect>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="160"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" CornerRadius="8,8,0,0" Background="#F0F0F0" ClipToBounds="True">
                                    <Image Source="{Binding ThumbnailPath, TargetNullValue={x:Null}, FallbackValue={x:Null}}" Stretch="UniformToFill"/>
                                </Border>

                                <StackPanel Grid.Row="1" Margin="15">

                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="18" Foreground="#333" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding Model}" FontSize="12" Foreground="Gray" Margin="0,0,0,10"/>
                                    <Separator Background="#EEE" Margin="0,0,0,10"/>

                                    <Grid Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Tahun:" Foreground="Gray"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Year}" FontWeight="SemiBold" HorizontalAlignment="Right"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Kapasitas:" Foreground="Gray" Margin="0,5"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Capacity, StringFormat='\{0\} Orang'}" FontWeight="SemiBold" HorizontalAlignment="Right" Margin="0,5"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Harga:" Foreground="Gray"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding PricePerDay, StringFormat='Rp {0:N0} /hari'}" FontWeight="Bold" Foreground="#1976D2" HorizontalAlignment="Right"/>
                                    </Grid>

                                    <TextBlock Margin="0,10,0,15" FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Available}" Value="True">
                                                        <Setter Property="Text" Value="Status: Tersedia"/>
                                                        <Setter Property="Foreground" Value="#388E3C"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Available}" Value="False">
                                                        <Setter Property="Text" Value="Status: Tidak Tersedia"/>
                                                        <Setter Property="Foreground" Value="#D32F2F"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Available}" Value="{x:Null}">
                                                        <Setter Property="Text" Value="Status: Tidak Diketahui"/>
                                                        <Setter Property="Foreground" Value="Gray"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <Button Content="Pilih Kapal Ini"
                                            Command="{Binding DataContext.SelectBoatCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Height="40" Background="#1976D2" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </Button.Resources>
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Available}" Value="False">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                        <Setter Property="Opacity" Value="0.6"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
