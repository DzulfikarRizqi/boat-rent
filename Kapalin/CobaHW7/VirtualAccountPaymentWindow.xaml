<Window x:Class="CobaHW7.VirtualAccountPaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Pembayaran Virtual Account" Height="750" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        WindowStyle="SingleBorderWindow">

    <Grid>
        <StackPanel Margin="40" VerticalAlignment="Center">
            <!-- Header -->
            <TextBlock Text="Pembayaran Virtual Account" FontSize="24" FontWeight="Bold" Foreground="#333"
                       Margin="0,0,0,30" TextAlignment="Center"/>

            <!-- Bank Info Container -->
            <Border Background="White" Padding="30" Margin="0,0,0,25">
                <Border.CornerRadius>
                    <CornerRadius TopLeft="15" TopRight="15" BottomLeft="15" BottomRight="15"/>
                </Border.CornerRadius>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Bank Selection -->
                    <TextBlock Text="Pilih Bank" FontSize="14" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,12"/>
                    <ComboBox x:Name="BankComboBox" Height="40" Padding="12" Margin="0,0,0,25" FontSize="13">
                        <ComboBoxItem Content="BCA (Bank Central Asia)"/>
                        <ComboBoxItem Content="Mandiri (Bank Mandiri)"/>
                        <ComboBoxItem Content="BNI (Bank Negara Indonesia)"/>
                        <ComboBoxItem Content="BRI (Bank Rakyat Indonesia)"/>
                    </ComboBox>

                    <!-- Virtual Account Number -->
                    <TextBlock Text="Nomor Virtual Account" FontSize="14" FontWeight="SemiBold" Foreground="#666" Margin="0,0,0,12"/>
                    <Border Background="#F9F9F9" Padding="15" Margin="0,0,0,25">
                        <Border.CornerRadius>
                            <CornerRadius TopLeft="8" TopRight="8" BottomLeft="8" BottomRight="8"/>
                        </Border.CornerRadius>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock x:Name="VANumberText" Grid.Column="0" FontSize="16" FontWeight="Bold"
                                      Foreground="#007ACC" FontFamily="Courier New" VerticalAlignment="Center"/>

                            <Button Grid.Column="1" Content="Salin" Width="60" Height="30" Margin="10,0,0,0"
                                   Background="#E8E8E8" Foreground="#333" FontSize="12" FontWeight="SemiBold"
                                   Cursor="Hand" Click="Copy_Click"/>
                        </Grid>
                    </Border>

                    <!-- Instructions -->
                    <TextBlock Text="Instruksi Pembayaran" FontSize="12" Foreground="#999" Margin="0,0,0,8"/>
                    <TextBlock Text="Transfer ke nomor virtual account di atas melalui ATM, mobile banking, atau internet banking Anda."
                              FontSize="12" Foreground="#666" TextWrapping="Wrap" Margin="0,0,0,25"/>

                    <!-- Nominal Section -->
                    <Border Background="#FFF9E6" Padding="15">
                        <Border.CornerRadius>
                            <CornerRadius TopLeft="8" TopRight="8" BottomLeft="8" BottomRight="8"/>
                        </Border.CornerRadius>
                        <StackPanel>
                            <TextBlock Text="Nominal Pembayaran" FontSize="12" Foreground="#999" Margin="0,0,0,8"/>
                            <TextBlock x:Name="NominalText" FontSize="24" FontWeight="Bold" Foreground="#FF9800"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <Grid Margin="0,20,0,0" HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Batalkan" Width="120" Height="45"
                        Background="#E0E0E0" Foreground="#333" FontSize="14" FontWeight="SemiBold"
                        Cursor="Hand" Click="Cancel_Click"/>

                <Button Grid.Column="2" Content="Konfirmasi Pembayaran" Width="180" Height="45"
                        Background="#007ACC" Foreground="White" FontSize="14" FontWeight="SemiBold"
                        Cursor="Hand" Click="Confirm_Click"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
