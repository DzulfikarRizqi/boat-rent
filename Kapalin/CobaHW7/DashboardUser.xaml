<Window x:Class="CobaHW7.DashboardUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CobaHW7"
        xmlns:vm="clr-namespace:CobaHW7.ViewModels"
        mc:Ignorable="d"
        Title="Dashboard"
        Height="1080" Width="1920"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F5F7FB">

    <Window.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>

        <!-- Sidebar button style -->
        <Style TargetType="Button" x:Key="SidebarButtonStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1649B2"/>
            <Setter Property="BorderBrush" Value="#1649B2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" Opacity="0.30" ShadowDepth="2" Color="#88A8FF"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0F3D8F"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0D347C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <vm:DashboardUserViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="357*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1649B2" Padding="20,15">
            <DockPanel LastChildFill="False">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="ToggleSidebarButton" Width="36" Height="36"
                            Background="Transparent" BorderBrush="Transparent"
                            Click="ToggleSidebar_Click" Margin="0,0,10,0">
                        <TextBlock Text="≡" Foreground="White" FontSize="18" FontWeight="Bold"/>
                    </Button>
                    <TextBlock Text="Dashboard - KAPALIN"
                               Foreground="White" FontWeight="Bold" FontSize="20"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <Image Source="pack://application:,,,/Assets/kapalinLOGO.png"
                       Width="50" Height="50"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"/>
            </DockPanel>
        </Border>

        <!-- Weather Section -->
        <Border x:Name="WeatherSection" Grid.Row="1" Background="White" Margin="20,15,20,0" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Color="Black"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Location Input -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="Cari Lokasi Pantai/Kota" Foreground="#666" FontSize="12" Margin="0,0,0,8" FontWeight="SemiBold"/>
                    <TextBox x:Name="LocationTextBox"
                             Text="{Binding LocationInput, UpdateSourceTrigger=PropertyChanged}"
                             Padding="12" Height="43"
                             Background="#F5F7FB" Foreground="#333"
                             BorderThickness="1" BorderBrush="#E0E0E0"
                             VerticalContentAlignment="Center" FontSize="13">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchWeatherCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                </StackPanel>

                <!-- Buttons Container -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,20,0">
                    <!-- Search Button -->
                    <Button Content="Cek Cuaca" Padding="20,10" Width="130" Margin="0,0,10,0"
                            Command="{Binding SearchWeatherCommand}"
                            Height="45"
                            Background="#1649B2" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.6"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Forecast Button -->
                    <Button Content="Forecast" Padding="20,10" Width="130"
                            Command="{Binding OpenForecastCommand}"
                            Height="45"
                            Background="#388E3C" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>

                <!-- Weather Info Display -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <!-- Weather Data -->
                    <StackPanel Visibility="{Binding CurrentWeather, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Foreground="#333" FontSize="14" FontWeight="Bold" Margin="0,0,0,6">
                            <Run Text="{Binding CurrentWeather.Location.Name}"/>
                            <Run Text=" - "/>
                            <Run Text="{Binding CurrentWeather.Current.Condition.Text}"/>
                        </TextBlock>
                        <TextBlock Foreground="#1649B2" FontSize="28" FontWeight="Bold" Margin="0,0,0,8">
                            <Run Text="{Binding CurrentWeather.Current.TemperatureCelsius, StringFormat=N0}"/>
                            <Run Text="°C"/>
                        </TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="#666" FontSize="11" Margin="0,0,20,0">
                                <Run Text="💨 "/>
                                <Run Text="{Binding CurrentWeather.Current.WindKph, StringFormat=N0}"/>
                                <Run Text=" kph"/>
                            </TextBlock>
                            <TextBlock Foreground="#666" FontSize="11" Margin="0,0,20,0">
                                <Run Text="💧 "/>
                                <Run Text="{Binding CurrentWeather.Current.Humidity}"/>
                                <Run Text="%"/>
                            </TextBlock>
                            <TextBlock Foreground="#666" FontSize="11">
                                <Run Text="☁ "/>
                                <Run Text="{Binding CurrentWeather.Current.Cloud}"/>
                                <Run Text="%"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <!-- Error Message -->
                    <StackPanel Visibility="{Binding HasWeatherError, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Foreground="#D32F2F" FontSize="12" TextWrapping="Wrap"
                                  Text="{Binding WeatherErrorMessage}"/>
                    </StackPanel>

                    <!-- Loading State -->
                    <StackPanel Visibility="{Binding IsLoadingWeather, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Foreground="#666" FontSize="12">Loading data cuaca...</TextBlock>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer x:Name="MainScrollViewer" Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="20" Grid.RowSpan="2">
            <StackPanel>
                <!-- Filter & Search Section (now scrolls with content) -->
                <Border x:Name="FilterSection" Background="White" Margin="0,0,0,15" Padding="20" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Color="Black"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search TextBox -->
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="Cari Kapal" Foreground="#666" FontSize="12" Margin="0,0,0,8" FontWeight="SemiBold"/>
                            <TextBox x:Name="SearchTextBox"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="12" Height="40"
                                     Background="#F5F7FB" Foreground="#333"
                                     BorderThickness="1" BorderBrush="#DDD"
                                     VerticalContentAlignment="Center" FontSize="13"/>
                        </StackPanel>

                        <!-- Capacity Filter -->
                        <StackPanel Grid.Column="1" Margin="15,0,15,0">
                            <TextBlock Text="Kapasitas" Foreground="#666" FontSize="12" Margin="0,0,0,8" FontWeight="SemiBold"/>
                            <ComboBox x:Name="CapacityCombo"
                                      SelectedValuePath="Content"
                                      SelectedValue="{Binding SelectedCapacity, UpdateSourceTrigger=PropertyChanged}"
                                      Padding="12" Height="40"
                                      Background="White" Foreground="#333"
                                      BorderThickness="1" BorderBrush="#DDD" FontSize="13">
                                <ComboBoxItem>Semua</ComboBoxItem>
                                <ComboBoxItem>2-10 Orang</ComboBoxItem>
                                <ComboBoxItem>11-30 Orang</ComboBoxItem>
                                <ComboBoxItem>30-100 Orang</ComboBoxItem>
                                <ComboBoxItem>100+ Orang</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>

                        <!-- Price Filter -->
                        <StackPanel Grid.Column="2" Margin="15,0,15,0">
                            <TextBlock Text="Harga Max" Foreground="#666" FontSize="12" Margin="0,0,0,8" FontWeight="SemiBold"/>
                            <ComboBox x:Name="PriceCombo"
                                      SelectedValuePath="Content"
                                      SelectedValue="{Binding SelectedPrice, UpdateSourceTrigger=PropertyChanged}"
                                      Padding="12" Height="40"
                                      Background="White" Foreground="#333"
                                      BorderThickness="1" BorderBrush="#DDD" FontSize="13">
                                <ComboBoxItem>Semua</ComboBoxItem>
                                <ComboBoxItem>Rp 0 - 10JT</ComboBoxItem>
                                <ComboBoxItem>Rp 10JT - 30JT</ComboBoxItem>
                                <ComboBoxItem>Rp 30JT - 50JT</ComboBoxItem>
                                <ComboBoxItem>Rp 50JT - 100JT</ComboBoxItem>
                                <ComboBoxItem>Rp 100JT+</ComboBoxItem>
                            </ComboBox>
                        </StackPanel>

                        <!-- Location Filter -->
                        <StackPanel Grid.Column="3" Margin="15,0,15,0">
                            <TextBlock Text="Lokasi" Foreground="#666" FontSize="12" Margin="0,0,0,8" FontWeight="SemiBold"/>
                            <ComboBox x:Name="LocationCombo"
                                      SelectedItem="{Binding SelectedLocation, UpdateSourceTrigger=PropertyChanged}"
                                      Padding="12" Height="40"
                                      Background="White" Foreground="#333"
                                      BorderThickness="1" BorderBrush="#DDD" FontSize="13"
                                      ItemsSource="{Binding Locations}"/>
                        </StackPanel>

                        <!-- Reset Button -->
                        <Button Grid.Column="4" Content="Reset Filter"
                                Command="{Binding ResetFilterCommand}"
                                Padding="20,10" Height="40"
                                Background="#E0E0E0" Foreground="#333" FontWeight="SemiBold"
                                BorderThickness="0" Cursor="Hand" Margin="15,20,0,0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                </Border>

                <ItemsControl ItemsSource="{Binding Boats}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" Width="280" Margin="0,0,20,20" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1" Color="Black"/>
                                </Border.Effect>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="160"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" CornerRadius="8,8,0,0" Background="#F0F0F0" ClipToBounds="True">
                                        <Image Source="{Binding ThumbnailPath, TargetNullValue={x:Null}, FallbackValue={x:Null}}" Stretch="UniformToFill"/>
                                    </Border>

                                    <StackPanel Grid.Row="1" Margin="15">

                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="18" Foreground="#333" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding Model}" FontSize="12" Foreground="Gray" Margin="0,0,0,10"/>
                                        <Separator Background="#EEE" Margin="0,0,0,10"/>

                                        <Grid Margin="0,0,0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Tahun:" Foreground="Gray"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Year}" FontWeight="SemiBold" HorizontalAlignment="Right"/>

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Kapasitas:" Foreground="Gray" Margin="0,5"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Capacity, StringFormat='\{0\} Orang'}" FontWeight="SemiBold" HorizontalAlignment="Right" Margin="0,5"/>

                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Harga:" Foreground="Gray"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding PricePerDay, StringFormat='Rp {0:N0} /hari'}" FontWeight="Bold" Foreground="#1649B2" HorizontalAlignment="Right"/>
                                        </Grid>

                                        <TextBlock Margin="0,10,0,15" FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Available}" Value="True">
                                                            <Setter Property="Text" Value="Status: Tersedia"/>
                                                            <Setter Property="Foreground" Value="#388E3C"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Available}" Value="False">
                                                            <Setter Property="Text" Value="Status: Tidak Tersedia"/>
                                                            <Setter Property="Foreground" Value="#D32F2F"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Available}" Value="{x:Null}">
                                                            <Setter Property="Text" Value="Status: Tidak Diketahui"/>
                                                            <Setter Property="Foreground" Value="Gray"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <Button Content="Pilih Kapal Ini"
                                                Command="{Binding DataContext.SelectBoatCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Height="40" Background="#1649B2" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="6"/>
                                                </Style>
                                            </Button.Resources>
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Available}" Value="False">
                                                            <Setter Property="IsEnabled" Value="False"/>
                                                            <Setter Property="Opacity" Value="0.6"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- About Us -->
                <WrapPanel x:Name="AboutUsPanel" Margin="20" Width="800">
                    <Border Background="White" Margin="20" Width="750"
                            CornerRadius="10" Padding="20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="20" Opacity="0.30" ShadowDepth="2" Color="#88A8FF"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="ABOUT US"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="#0D47A1"
                                       Margin="0,0,0,10"
                                       TextAlignment="Center"/>

                            <TextBlock Text="   KAPALIN adalah platform modern yang menghadirkan layanan penyewaan kapal secara cepat, mudah, dan terpercaya. Kami menyediakan berbagai jenis kapal yang dapat disesuaikan dengan kebutuhan pelanggan, mulai dari perjalanan wisata, transportasi antar pulau, hingga keperluan profesional seperti survei laut atau kegiatan ekspedisi. Dengan sistem pemesanan yang praktis dan transparan, KAPALIN berkomitmen untuk memberikan pengalaman sewa kapal yang aman, nyaman, dan efisien. Didukung oleh mitra kapal berpengalaman serta layanan pelanggan yang responsif, kami terus berupaya menghadirkan solusi terbaik bagi setiap perjalanan Anda di laut."
                                       FontSize="14"
                                       TextWrapping="Wrap"
                                       Foreground="Gray"
                                       TextAlignment="Justify"/>
                        </StackPanel>

                    </Border>
                </WrapPanel>

                <!-- Why Us -->
                <WrapPanel x:Name="WhyUsPanel" Margin="20" Width="800">
                    <Border Background="White" Margin="20" Width="750"
                            CornerRadius="10" Padding="20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="20" Opacity="0.3" ShadowDepth="2" Color="#FF88A8FF"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="WHY US?"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="#0D47A1"
                                       Margin="0,0,0,10"
                                       TextAlignment="Center"/>

                            <TextBlock Text="   KAPALIN hadir dengan komitmen untuk memberikan layanan penyewaan kapal yang cepat, aman, dan tepercaya. Kami memastikan setiap kapal yang tersedia telah melalui proses pengecekan kualitas dan standar keselamatan yang ketat, sehingga pelanggan dapat berlayar dengan rasa aman dan nyaman. Selain itu, proses pemesanan yang mudah dan transparan memudahkan pelanggan untuk memilih kapal sesuai kebutuhan tanpa kerumitan. &#10;&#10;   Dengan dukungan tim profesional serta jaringan mitra kapal yang luas, kami mampu memberikan pelayanan yang responsif, informatif, dan berorientasi pada kepuasan pelanggan. Dedikasi kami dalam menjaga kualitas layanan menjadikan KAPALIN pilihan tepat bagi siapa pun yang membutuhkan solusi penyewaan kapal yang efisien dan dapat diandalkan."
                                       FontSize="14"
                                       TextWrapping="Wrap"
                                       Foreground="Gray"
                                       TextAlignment="Justify"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Overlay & Sidebar -->
        <Border x:Name="Overlay"
                Background="#80000000"
                Visibility="Collapsed"
                Panel.ZIndex="20"
                Grid.RowSpan="4"
                MouseDown="Overlay_MouseDown"/>

        <Border x:Name="Sidebar"
                Background="#1649B2"
                BorderBrush="#0F3D8F"
                Width="220"
                HorizontalAlignment="Left"
                Panel.ZIndex="21"
                Grid.RowSpan="4"
                RenderTransformOrigin="0,0">
            <Border.RenderTransform>
                <TranslateTransform x:Name="SidebarTransform" X="-220"/>
            </Border.RenderTransform>

            <StackPanel Margin="10">
                <Grid Margin="0,10,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="MENU"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="10,0,0,0"
                               VerticalAlignment="Center"/>

                    <Button Grid.Column="1"
                            Width="32" Height="32"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Foreground="White"
                            FontSize="16"
                            Click="ToggleSidebar_Click">
                        <TextBlock Text="×"/>
                    </Button>
                </Grid>

                <Button Style="{StaticResource SidebarButtonStyle}" Content="Rental"
                        Click="RentalSection_Click" Margin="10"/>

                <Button Style="{StaticResource SidebarButtonStyle}" Content="About Us"
                        Click="AboutUsSection_Click" Margin="10"/>

                <Button Style="{StaticResource SidebarButtonStyle}" Content="Why Us"
                        Click="WhyUsSection_Click" Margin="10"/>

                <Button Style="{StaticResource SidebarButtonStyle}" Content="Forecast"
                        Command="{Binding OpenForecastCommand}" Margin="10"/>

                <Button Style="{StaticResource SidebarButtonStyle}" Content="Cek Booking"
                        Click="BtnCekBooking_Click" Margin="10"/>

                <Button x:Name="LogoutSidebarButton" Content="Logout" Background="#D32F2F" Foreground="White"
                        Width="180" Height="32" FontSize="14" FontWeight="SemiBold"
                        Margin="10" Click="BtnLogout_Click"/>

            </StackPanel>

        </Border>
    </Grid>
</Window>
