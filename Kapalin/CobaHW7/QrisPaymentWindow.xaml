<Window x:Class="CobaHW7.QrisPaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Pembayaran QRIS" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        WindowStyle="SingleBorderWindow">

    <Grid>
        <StackPanel Margin="40" VerticalAlignment="Center">
            <!-- Header -->
            <TextBlock Text="Pembayaran QRIS" FontSize="24" FontWeight="Bold" Foreground="#333"
                       Margin="0,0,0,30" TextAlignment="Center"/>

            <!-- QRIS Code Container -->
            <Border Background="White" Padding="30" Margin="0,0,0,30">
                <Border.CornerRadius>
                    <CornerRadius TopLeft="15" TopRight="15" BottomLeft="15" BottomRight="15"/>
                </Border.CornerRadius>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.1" ShadowDepth="2"/>
                </Border.Effect>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <!-- QRIS Icon/Placeholder -->
                    <Border Height="200" Width="200" Background="#F0F0F0" Margin="0,0,0,20" HorizontalAlignment="Center">
                        <Border.CornerRadius>
                            <CornerRadius TopLeft="10" TopRight="10" BottomLeft="10" BottomRight="10"/>
                        </Border.CornerRadius>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ“±" FontSize="64" HorizontalAlignment="Center"/>
                            <TextBlock Text="QRIS Code" FontSize="14" Foreground="#999"
                                      HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Instructions -->
                    <TextBlock Text="Scan kode QRIS di bawah menggunakan aplikasi pembayaran Anda"
                              FontSize="12" Foreground="#666" TextAlignment="Center"
                              TextWrapping="Wrap" Margin="0,0,0,25"/>

                    <!-- Nominal Section -->
                    <Border Background="#F9F9F9" Padding="15" Margin="0,0,0,25">
                        <Border.CornerRadius>
                            <CornerRadius TopLeft="8" TopRight="8" BottomLeft="8" BottomRight="8"/>
                        </Border.CornerRadius>
                        <StackPanel>
                            <TextBlock Text="Nominal Pembayaran" FontSize="12" Foreground="#999" Margin="0,0,0,8"/>
                            <TextBlock x:Name="NominalText" FontSize="24" FontWeight="Bold" Foreground="#007ACC"/>
                        </StackPanel>
                    </Border>

                    <!-- Reference Number -->
                    <Border Background="#F9F9F9" Padding="15">
                        <Border.CornerRadius>
                            <CornerRadius TopLeft="8" TopRight="8" BottomLeft="8" BottomRight="8"/>
                        </Border.CornerRadius>
                        <StackPanel>
                            <TextBlock Text="Referensi Transaksi" FontSize="12" Foreground="#999" Margin="0,0,0,8"/>
                            <TextBlock x:Name="ReferenceText" FontSize="14" Foreground="#333"
                                      FontFamily="Courier New" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Batalkan" Width="Auto" Height="40"
                        Background="#E0E0E0" Foreground="#333" FontSize="14" FontWeight="SemiBold"
                        Cursor="Hand" Click="Cancel_Click"/>

                <Button Grid.Column="2" Content="Konfirmasi Pembayaran" Width="Auto" Height="40"
                        Background="#007ACC" Foreground="White" FontSize="14" FontWeight="SemiBold"
                        Cursor="Hand" Click="Confirm_Click"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
