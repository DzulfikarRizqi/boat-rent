<Window x:Class="CobaHW7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CobaHW7"
        mc:Ignorable="d"
        Title="WpfApp1 Login" Height="1080" Width="1920"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        Background="#F0F2F5">

    <Grid>

        <Image Source="pack://application:,,,/Assets/BekgronKapel.jpeg"
               Stretch="UniformToFill"
               Opacity="0.70"
               Panel.ZIndex="0" />

        <Border Width="850" Height="580"
                Background="White"
                CornerRadius="15"
                Margin="15"
                ClipToBounds="True">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="15" Color="#DDDDDD" Opacity="0.5"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.2*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">

                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#1aa3ff" Offset="0.0"/>
                            <GradientStop Color="#007ACC" Offset="0.5"/>
                            <GradientStop Color="#004c80" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Grid.Background>

                    <StackPanel VerticalAlignment="Center" Margin="35">

                        <Image Source="pack://application:,,,/Assets/kapalinLOGO.png"
                                Width="300"
                                Height="300"
                                Stretch="Uniform"/>

                        <TextBlock Text="Selamat datang di KAPALIN"
                                   FontSize="26" FontWeight="Bold" Foreground="#FFFFFF"
                                   Margin="0,0,0,10" TextWrapping="Wrap"/>

                        <TextBlock Text="Aplikasi untuk rental berbagai macam kendaraan laut, seperti perahu, speedboat, kapal, yacht."
                                   FontSize="14" Foreground="#e6e6e6"
                                   TextWrapping="Wrap" LineHeight="20" Margin="0,0,0,30"/>
                    </StackPanel>
                </Grid>


                <Grid Grid.Column="1" Background="White">

                    <StackPanel VerticalAlignment="Center" Margin="50,0,50,0" >

                        <TextBlock Text="Get Started"
                                   FontSize="28" FontWeight="Bold" Foreground="#333" Margin="0,0,0,5"/>

                        <TextBlock FontSize="14" Margin="0,0,0,25">
                            <Run Text="Belum punya akun? " Foreground="#555"/>
                            <Hyperlink Foreground="#007ACC" Cursor="Hand" Click="RegisterHyperlink_Click">
                                Register
                            </Hyperlink>
                        </TextBlock>

                        <TextBlock Text="Email" FontSize="14" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                        <TextBox x:Name="EmailTextBox" FontSize="14" Padding="10,8" BorderThickness="1" BorderBrush="#CCCCCC" Margin="0,0,0,15" KeyDown="EmailTextBox_KeyDown"/>

                        <TextBlock Text="Password" FontSize="14" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="PasswordBox" FontSize="14" Padding="10,8" BorderThickness="1" BorderBrush="#CCCCCC" Margin="0,0,0,25" KeyDown="PasswordBox_KeyDown"/>

                        <Button x:Name="SignInButton" Content="Sign In"
                                FontSize="16" FontWeight="Bold" Background="#1649B2"
                                Foreground="White" BorderBrush="#1649B2" BorderThickness="0" Padding="12" 
                                Cursor="Hand" Click="SignInButton_Click"
                                IsDefault="True">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Grid>

            </Grid>
        </Border>
    </Grid>
</Window>
