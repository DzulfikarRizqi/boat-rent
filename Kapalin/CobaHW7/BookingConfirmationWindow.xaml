<Window x:Class="CobaHW7.BookingConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Konfirmasi Booking"
        Height="360" Width="550"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Topmost="True">

    <Grid>
        <Border Background="White" CornerRadius="15" Padding="30">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="8" BlurRadius="20" Color="#000000" Opacity="0.2"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center">
                <!-- Icon Area -->
                <Grid Height="60" Margin="0,0,0,20">
                    <Ellipse x:Name="IconBackground" Width="60" Height="60" Fill="#FFF3CD"/>
                    <TextBlock x:Name="IconText" Text="!" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF9800"/>
                </Grid>

                <!-- Title -->
                <TextBlock x:Name="TitleText" FontSize="18" FontWeight="Bold" Foreground="#333333"
                           TextAlignment="Center" Margin="0,0,0,10" TextWrapping="Wrap"/>

                <!-- Message -->
                <TextBlock x:Name="MessageText" FontSize="13" Foreground="#666666"
                           TextAlignment="Center" Margin="0,0,0,25" TextWrapping="Wrap" LineHeight="20"/>

                <!-- Buttons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="YesButton" Grid.Column="0" Content="Ya" FontSize="14" FontWeight="SemiBold"
                            Padding="15,10" Background="#FF9800" Foreground="White" BorderThickness="0"
                            Click="YesButton_Click" Cursor="Hand"
                            IsDefault="True">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button x:Name="NoButton" Grid.Column="2" Content="Tidak" FontSize="14" FontWeight="SemiBold"
                            Padding="15,10" Background="#E0E0E0" Foreground="#333333" BorderThickness="0"
                            Click="NoButton_Click" Cursor="Hand"
                            IsCancel="True">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
